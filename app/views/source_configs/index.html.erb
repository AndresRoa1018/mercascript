<p id="notice"><%= notice %></p>

<h1>Listing Source Configs</h1>

<table>
  <thead>
    <tr>
      <th>Datasource</th>
      <th>Login</th>
      <th>Password</th>
      <th>Domain</th>
      <th>Active</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @source_configs.each do |source_config| %>
      <tr>
        <td><%= source_config.datasource %></td>
        <td><%= source_config.login %></td>
        <td><%= source_config.password %></td>
        <td><%= source_config.domain %></td>
        <td><%= source_config.active %></td>
        <td><%= source_config.data %></td>
        <td><%= link_to 'Show', source_config %></td>
        <td><%= link_to 'Edit', edit_source_config_path(source_config) %></td>
        <td><%= link_to 'Destroy', source_config, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

